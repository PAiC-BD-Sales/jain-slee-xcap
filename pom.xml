	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.mobicents.servers.jainslee</groupId>
		<artifactId>restcomm-slee-parent</artifactId>
		<version>7.1.14</version>
	</parent>

	<groupId>org.mobicents.servers.jainslee.xcap</groupId>
	<artifactId>restcomm-slee-xcap</artifactId>
	<version>7.2.0-SNAPSHOT</version>

	<packaging>pom</packaging>

	<modules>
		<module>resources/xcap-client</module>
		<module>enablers/xdm-client</module>
	</modules>

	<scm>
		<connection>scm:git:https://github.com/RestComm/jain-slee.xcap.git</connection>
		<developerConnection>scm:git:git@github.com:RestComm/jain-slee.xcap.git</developerConnection>
		<url>https://github.com/RestComm/jain-slee.xcap</url>
	</scm>

	<properties>
		<restcomm.resources.sip11.version>7.1.28</restcomm.resources.sip11.version>
		<compiler.plugin.version>3.8.1</compiler.plugin.version>
		<compile.source>11</compile.source>
	</properties>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>${compiler.plugin.version}</version>
				<configuration>
					<source>${compile.source}</source>
					<target>${compile.source}</target>
					<debug>${compile.debug}</debug>
				</configuration>
			</plugin>
		</plugins>
	</build>


	<profiles>
		<profile>
			<id>maven-release</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-release-plugin</artifactId>
						<configuration>
							<autoVersionSubmodules>true</autoVersionSubmodules>
							<preparationGoals>clean install</preparationGoals>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>

